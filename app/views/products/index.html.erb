<!-- 排序  -->
<div class="sorts" data-reactid=".0.0.2">
  <span class="name">商品排序：</span>

  <span><%= link_to("默认", products_path) %></span>

  <span><%= link_to("价格", products_path(:order => "by_product_price")) %><i class="fa fa-arrow-down" ></i></span>
  <span><%= link_to("销量", products_path(:order => "by_product_quantity")) %></span>
  <!-- <span><%= link_to("上架时间",'#') %></span> -->

</div>

<!-- 教材 -->
<div class="row">
  <% @products.each do |product| %>
      <div class="col-xs-6 col-md-3">
        <%= link_to product_path(product) do %>
          <% if product.image.present? %>
          <%= image_tag(product.image.thumb.url, :class => "thumbnail") %>
        <% else %>
         <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
        <% end %>
        <% end %>
        <%= product.title %> ¥ <%= product.price %>
      </div>
    <% end %>
</div>
